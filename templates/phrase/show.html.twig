{% extends 'base.html.twig' %}

{% block title %} Jūsų sugeneruota nuostaba!{% endblock %}

{% block body %}


{% if new is defined %}
<div class ="messageText">
    <h3> Jūsų nuostaba sukurta adresu - {{url_code}}</h3>
</div>
   
{% endif %}

{% if not_exist is defined %}
   <div class=" centered" id ="text">
        <div class="text-inside">
              NUOSTABA ADRESU -
        {{ url_code }} NERASTA </br>
        </div>
      
        <div class="afterCentered">
        <a href="{{ path('phrase')}}" type="button" class="btn btn-warning">Generuoti kitą nuostabą</a>

      </div>
      
</div>

{% else %}
{% if new is  not defined %}
 <h3  class ="messageText"> Jūsų išsaugota nuostaba</h3>
{% endif %}
<div class=" centered" id ="text">
       
        <div class="text-inside">
            {{ phr.getPhrase() }} </br>
        </div>
        <div class="afterCentered">
        <a href="{{ path('phrase')}}" type="button" class="btn btn-warning">Generuoti kitą nuostabą</a>

      </div>
      
</div>
{% endif %}




{% endblock %}


{% block javascripts %}

{% if not_exist is not defined %}
<script>
    document.getElementById("text").style.borderColor = "{{ phr.getColor()}}";
</script>
{% endif %}

{% endblock %}

